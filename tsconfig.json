{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "watch": true
  },
  "include": ["./modules/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "./modules/types",
    "assets",
    "out",
  ]
}
