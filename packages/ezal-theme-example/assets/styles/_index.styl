@import '_var'

*
	box-sizing border-box

:root
	scroll-behavior smooth

body
	margin 0
	background var(--bg)
	color var(--text)
	font 16px / 1.5 var(--font)

::selection
	background var(--theme-a8)

a
	color var(--theme)
	word-wrap break-word
	transition .1s color
	&:hover
		color var(--text)

code
	font-family var(--font-mono)
	font-feature-settings 'calt', 'cv01', 'cv03', 'cv61', 'cv96', 'cv97', 'cv98', 'ss08'

.wrap
	padding 0 16px
	max-width 1000px

.rounded
	border-radius 8px
	.rounded
		border-radius 7px

.flex
	flex 1

.glass
	border 1px solid var(--glass-border)
	background var(--glass)
	--glass s('color-mix(in srgb, var(--bg), #0000)')
	--glass-border s('color-mix(in srgb, var(--text), #0000 90%)')
	backdrop-filter blur(8px)

.link
	position relative
	color var(--text)
	text-decoration none
	transition .2s
	&>*
		position relative
	&:after
		position absolute
		z-index -1
		background var(--theme)
		content ''
		opacity 0
		filter blur(32px)
		transition .5s
		pointer-events none
		inset 0
	&:hover
		color var(--theme)
		&:after
			opacity 1
	&:active
		opacity .6

main
	@extend .wrap
	position relative
	margin auto
	inset 0

@import './_index/**/*'

if config('waline')
	#waline
		margin auto
		--waline-theme-color var(--theme)
		--waline-active-color var(--theme-ad)
		--waline-color var(--text)
		--waline-bg-color var(--bg)
		--waline-bg-color-light var(--panel)
		--waline-bg-color-hover var(--text-a2)
		--waline-border 1px solid var(--text-a8)
		--waline-border-color var(--text-a2)
		--waline-code-bg-color #2d2d2d
		--waline-info-bg-color var(--panel)
		textarea
			font-family var(--font-mono)
