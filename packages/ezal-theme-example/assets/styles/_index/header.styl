@keyframes grid
	0%
		background-position 16px 16px
	100%
		background-position 48px 80px

header
	position relative
	overflow hidden
	padding 128px 0
	background:
		linear-gradient(var(--color) 2%, #0000 0%) 0 16px / 1px 32px,
		linear-gradient(to right, var(--color) 2%, #0000 0%) 16px / 32px
	animation grid 10s infinite linear
	--color s('color-mix(in srgb, var(--text), var(--bg) 90%)')
	&:after
		position absolute
		bottom 0
		left 0
		width 100%
		height s('max(10%, 64px)')
		background linear-gradient(to bottom, #0000, var(--bg))
		content ''
		pointer-events none
	&>*:not(picture)
		position relative
		margin auto
		inset 0
	img
		position absolute
		width 100%
		height 100%
		opacity .5
		inset 0
		object-fit cover

h1
	margin 0
	font-size s('clamp(42px, 5vw, 63px)')
	line-height 1.2
