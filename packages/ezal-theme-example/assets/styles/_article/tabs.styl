.tabs
	margin 16px 0
	border 1px solid var(--border)
	background var(--panel)

.tab-nav
	label
		position relative
		display inline-block
		padding 8px 16px
		transition .1s opacity, .1s background
		&:not(:hover):not(:has(:checked))
			opacity .7
		&:has(:focus-visible)
			outline 2px solid
		&:has(:checked)
			background var(--theme-a4)
	input
		position absolute
		opacity 0

.tab-content
	padding 0 16px
	&>:not(.active)
		display none
